<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:Tessera.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d"
             x:Class="Tessera.Views.Editors.SchemaView">

  <Grid Margin="24">

    <ScrollViewer Grid.Row="1">
      <ItemsControl ItemsSource="{Binding Columns}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Spacing="12" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Background="{DynamicResource SurfaceBrush}" Padding="12" BorderBrush="{DynamicResource BorderBrushLight}" BorderThickness="1">
              <Grid ColumnDefinitions="2*,2*,2*,1*,Auto" VerticalAlignment="Center">
                  <!-- Name Input -->
                  <StackPanel Spacing="4" Margin="0,0,16,0">
                      <TextBlock Text="Field Name" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Medium"/>
                      <TextBox Text="{Binding Name}" Watermark="e.g. Price" />
                  </StackPanel>
                  
                  <!-- Type Selector -->
                  <StackPanel Grid.Column="1" Spacing="4" Margin="0,0,16,0">
                      <TextBlock Text="Data Type" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Medium"/>
                      <ComboBox SelectedItem="{Binding Type}" ItemsSource="{x:Static viewmodels:SchemaViewModel.AvailableTypes}" HorizontalAlignment="Stretch" />
                  </StackPanel>
                  
                  <!-- Optional Checks -->
                  <StackPanel Grid.Column="2" Spacing="8" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,16,6">
                      <CheckBox IsChecked="{Binding IsNullable}" Content="Nullable" />
                      <TextBlock Text="{Binding IsEdited, StringFormat=Edited}" IsVisible="{Binding IsEdited}" FontSize="10" Foreground="{DynamicResource WarningBrush}" VerticalAlignment="Center"/>
                  </StackPanel>

                  <!-- Min/Max (Placeholder for layout, binding might need adjustment if viewmodel has these) -->
                   <!-- For now keeping it simple as per plan, focused on alignment -->
                  
                  <!-- Remove Action -->
                  <Button Grid.Column="4" Content="Remove" Command="{Binding RemoveCommand}" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource ErrorBrush}" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
              </Grid>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</UserControl>
